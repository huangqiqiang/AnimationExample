<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hqq.viewexample.activity.ValueAnimatorActivity">

    <Button
        android:id="@+id/btn_TranslateAnimation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TranslateAnimation " />

    <Button
        android:id="@+id/btn_ValueAnimator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_TranslateAnimation"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:text="ValueAnimator " />


</RelativeLayout>
