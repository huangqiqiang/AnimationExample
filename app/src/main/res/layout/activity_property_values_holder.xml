<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hqq.viewexample.activity.animate.PropertyValuesHolderActivity">

    <Button
        android:id="@+id/btn_PropertyValuesHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="PropertyValuesHolder" />

    <com.hqq.viewexample.view.MyTextView
        android:id="@+id/tv_CharEvaluator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_PropertyValuesHolder"
        android:layout_alignStart="@+id/btn_PropertyValuesHolder"
        android:layout_below="@+id/btn_PropertyValuesHolder"
        android:layout_marginLeft="43dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="17dp"
        android:text="CharEvaluator" />

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_PropertyValuesHolder"
        android:layout_alignStart="@+id/btn_PropertyValuesHolder"
        android:layout_below="@+id/tv_CharEvaluator"
        android:layout_marginTop="29dp"
        app:srcCompat="@mipmap/phone" />
</RelativeLayout>
